<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudenMenu">
    <Button
        android:id="@+id/btnnewstudent"
        android:textSize="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="تسجيل طالب"
        android:layout_marginTop="105dp"
        />
    <Button
        android:id="@+id/btnevalstudent"
        android:textSize="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnnewstudent"
        android:text="تقييم طالب"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btnback"
        android:textSize="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnevalstudent"
        android:text="رجوع"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>